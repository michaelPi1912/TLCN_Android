<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_notice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp"
    android:layout_marginTop="5dp"
    android:background="#CDC7C7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Để xem thông tin chi tiết vé, Vui lòng qua phần Vé máy bay"
            android:gravity="center"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_baseline_notifications_none_24"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="28/12/2022 12:30"
        android:layout_marginLeft="10dp"
        android:textSize="14dp" />

</LinearLayout>